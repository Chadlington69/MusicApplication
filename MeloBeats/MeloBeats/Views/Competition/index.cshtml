@model IEnumerable<MeloBeats.Models.CompetitionPost>
@{
    Layout = "_Layout";
}

<div class="main-frame">
    <div class="top-content">
        <h1>Recent Melo Beats Competition Posts</h1>
        <a class="create-btn" href="@Url.Action("Create", "Competition")">Create</a>
    </div>
    <hr />
    <div class="arrows">
        @if (ViewBag.HasPreviousPage)
        {
            <a href="@Url.Action("Index", "Competition" , new { page = ViewBag.PreviousPage })">
                &lt; Previous
            </a>
        }

        @if (ViewBag.HasNextPage)
        {
            <a class="next" href="@Url.Action("Index", "Competition" , new { page = ViewBag.NextPage })">
                Next &gt;
            </a>
        }
    </div>

    <div>
        @foreach (var post in Model)
        {
            @await Html.PartialAsync("_CompetitionPost", post)
        }
    </div>

</div>
