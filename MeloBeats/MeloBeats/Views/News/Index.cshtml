@model IEnumerable<MeloBeats.Models.NewsPost>
@{
    Layout = "_Layout";
}

<div class="main-frame">
    
    <div class="top-content">
        <h1 class="title-of-page">Recent News Posts</h1>
        <a class="create-btn" href="@Url.Action("Create", "News")">Create</a>
    </div>
    <hr />
    <div class="arrows">
        @if (ViewBag.HasPreviousPage)
        {
            <a href="@Url.Action("Index", "News", new { page = ViewBag.PreviousPage })">
                &lt; Previous
            </a>
        }

        @if (ViewBag.HasNextPage)
        {
            <a class="next" href="@Url.Action("Index", "News", new { page = ViewBag.NextPage })">
                Next &gt;
            </a>
        }
    </div>
  
    <div>
        @foreach (var post in Model)
        {
            @await Html.PartialAsync("_NewsPost", post)
        }
    </div>

</div>
